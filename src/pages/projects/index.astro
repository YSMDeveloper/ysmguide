---
import { Icon } from "astro-icon/components";
import Layout from "../../layouts/Layout.astro";
---
<Layout title="Proyectos">
    <main>
        <div class="content">
            <div class="flex text-5xl items-center justify-center h-1/6">YSMGuide</div>
            <div class="h-5/6 p-5">
                <div
                    class="h-full flex bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w dark:border-gray-700 dark:bg-gray-800 p-5"
                >
                    <img
                        class="object-cover"
                        src="https://via.placeholder.com/640x480"
                        alt="Card Image"
                    />
                    <div class="h-full w-full justify-start p-5">
                        <div class="h-8 flex ">
                            <div>
                                <Icon
                                    name="simple-icons:javascript"
                                    class="h-16 w-16 mx-4 hover:text-amber-400"
                                />
                            </div>
                            <div>
                                <Icon
                                    name="simple-icons:astro"
                                    class="h-16 w-16 mx-4 hover:text-orange-500"
                                />
                            </div>
                            <div>
                                <Icon
                                    name="simple-icons:typescript"
                                    class="h-16 w-16 mx-4 hover:text-blue-500"
                                />
                            </div>
                            <div>
                                <Icon
                                    name="simple-icons:tailwindcss"
                                    class="h-16 w-16 mx-4 hover:text-blue-400"
                                />
                            </div>
                            <div>
                                <Icon
                                    name="simple-icons:iconify"
                                    class="h-16 w-16 mx-4 hover:text-blue-500"
                                />
                            </div>
                            <div>
                                <Icon
                                    name="simple-icons:github"
                                    class="h-16 w-16 mx-4 hover:text-white"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
<style>
    .content {
      height: calc(100vh - 73px); /* 100vh menos la altura del navbar */
    }
  </style>
