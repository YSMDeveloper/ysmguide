---
import { Icon } from "astro-icon/components";
import Layout from "../../layouts/Layout.astro";
import AccordionItem from "../../components/AccordionItem.astro";
import Alert from "../../components/Alert.astro";
import projectsData from "../../data/projectsData";
---

<Layout title="Proyectos">
    <div class="h-32 w-full">
        <div class="h-full w-full p-4 flex items-center justify-center">
            <div>
                <Icon
                    name="simple-icons:javascript"
                    class="h-16 w-16 mx-4 hover:text-amber-400"
                />
            </div>
            <div>
                <Icon
                    name="simple-icons:astro"
                    class="h-16 w-16 mx-4 hover:text-orange-500"
                />
            </div>
            <div>
                <Icon
                    name="simple-icons:typescript"
                    class="h-16 w-16 mx-4 hover:text-blue-500"
                />
            </div>
            <div>
                <Icon
                    name="simple-icons:tailwindcss"
                    class="h-16 w-16 mx-4 hover:text-blue-400"
                />
            </div>
            <div>
                <Icon
                    name="simple-icons:iconify"
                    class="h-16 w-16 mx-4 hover:text-blue-500"
                />
            </div>
            <div>
                <Icon
                    name="simple-icons:github"
                    class="h-16 w-16 mx-4 hover:text-white"
                />
            </div>
        </div>
    </div>
    <div class="h-32 flex w-full items-center justify-center">
        <code
            class="text-sm sm:text-base inline-flex text-left items-center space-x-4 bg-gray-800 text-white rounded-lg p-4 pl-6"
        >
            <span class="flex gap-4">
                <span class="shrink-0 text-gray-500"> $ </span>

                <span class="flex-1">
                    <span> composer require </span>

                    <span class="text-yellow-500"> laravel/dusk </span>
                </span>
            </span>

            <svg
                class="shrink-0 h-5 w-5 transition text-gray-500 group-hover:text-white"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
            >
                <path d="M8 2a1 1 0 000 2h2a1 1 0 100-2H8z"></path>
                <path
                    d="M3 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v6h-4.586l1.293-1.293a1 1 0 00-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L10.414 13H15v3a2 2 0 01-2 2H5a2 2 0 01-2-2V5zM15 11h2a1 1 0 110 2h-2v-2z"
                >
                </path>
            </svg>
        </code>
    </div>
    <div class="h-[45rem] my-5">
        <div class="flex h-full">
            <div
                class="w-1/3 h-full flex-col bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w dark:border-gray-700 dark:bg-gray-800 mx-5"
            >
                <div class="flex h-16 justify-center items-center">
                    <div
                        class="h-8 w-60 bg-slate-950 rounded text-gray-100 text-center font-bold flex items-center justify-center"
                    >
                        Instalaci贸n
                    </div>
                </div>
                <Alert
                    title="Info"
                    header="Aviso!"
                    info="Para el uso de javascript no se requiere de instalaci贸n, sin embargo requiere de un editor de texto o IDE y el uso de un navegador."
                />
                <div class="flex-col justify-center items-center m-5">
                    <AccordionItem
                        question="1.- Instalar un editor de texto o IDE"
                        answer="Puedes usar editores de texto como Visual Studio Code, Sublime Text, Atom, o IDEs como WebStorm"
                    />
                    <AccordionItem
                        question="2- Navegador"
                        answer="Para probar y depurar tu c贸digo JavaScript. Los navegadores modernos como Chrome, Firefox, Safari o Edge tienen herramientas de desarrollo que facilitan esta tarea"
                    />
                </div>
            </div>
            <div
                class="w-1/3 h-full bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w dark:border-gray-700 dark:bg-gray-800 mx-5"
            >
                <div class="flex h-16 justify-center items-center">
                    <div
                        class="h-8 w-60 bg-slate-950 rounded text-gray-100 text-center font-bold flex items-center justify-center"
                    >
                        Aplicaci贸n
                    </div>
                </div>
            </div>
            <div
                class="w-1/3 h-full bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w dark:border-gray-700 dark:bg-gray-800 mx-5"
            >
                <div class="flex h-16 justify-center items-center">
                    <div
                        class="h-8 w-60 bg-slate-950 rounded text-gray-100 text-center font-bold flex items-center justify-center"
                    >
                        Consejos
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="h-[38rem] w-full p-5 flex-col">
        <div class="flex text-5xl items-center justify-center h-20 w-full">
            Proyectos donde es integrado
        </div>
        <div class="">
            <div class="w-full justify-between py-4 leading-normal h-full grid grid-cols-4 grid-rows-1 gap-5">
                {projectsData.map((item) => (
                            <div class="h-full flex flex-col justify-between bg-white rounded-lg overflow-hidden shadow-md">
                                <img class="h-3/5 w-full object-cover" src="https://via.placeholder.com/640x480" alt="Card Image">
                                <div class="h-2/5 p-4">
                                    <div class="font-bold text-xl">Card Description</div>
                                    <p class="text-gray-700 text-base">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
                                </div>
                            </div>
                ))}
        </div>
        </div>
    </div>
</Layout>
