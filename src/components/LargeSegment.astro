---
//data imports
import projectsData from "../data/projectsData";
---

<a class="h-600 flex bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w dark:border-gray-700 dark:bg-gray-800">
    <div class="w-1/3 justify-between p-4 leading-normal">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Proyectos</h5>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">Here are the biggest enterprise technology acquisitions of 2021 so far, in reverse chronological order.</p>
    </div>
    <div class="w-2/3 justify-between p-4 leading-normal h-full grid grid-cols-4 grid-rows-1 gap-2">
            {projectsData.map((item) => (
                        <div class="h-full flex flex-col justify-between bg-white rounded-lg overflow-hidden shadow-md">
                            <img class="h-3/5 m-2 w-full object-cover" src="https://via.placeholder.com/640x480" alt="Card Image">
                            <div class="h-2/5 m-2">
                                <div class="font-bold text-xl">Card Description</div>
                                <p class="text-gray-700 text-base">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
                            </div>
                        </div>
            ))}
    </div>
</a>

<style>
	.h-600 {
        height: 400px;
	}
</style>

